<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
	<persistence-unit name="employeePersistence" transaction-type="RESOURCE_LOCAL">
	<mapping-file>META-INF/orm.xml</mapping-file>   
	<class>com.javapoint.Employee</class>
	<properties>
            <!-- Configuring The Database Connection Details -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/springbootdb?useSSL=false" />
            <property name="javax.persistence.jdbc.user" value="user" />
            <property name="javax.persistence.jdbc.password" value="user" />
    </properties>      
    </persistence-unit>    
</persistence>